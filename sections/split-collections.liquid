<div class="offset-wider-container">
	<div class="grid grid-2 gap-col-22">
		{% for block in section.blocks %}
			{% case block.type %}
				{% when 'collection_block' %}
					{% assign collection_image = 'https://cdn.shopify.com/s/files/1/0588/4867/3992/files/shop-apparel.jpg?v=1629900683' %}
					{% if block.settings.collection_block == 'home-goods' %}
						{% assign collection_image = 'https://cdn.shopify.com/s/files/1/0588/4867/3992/files/shop-home.jpg?v=1629900727' %}
					{% endif %}
					{% assign collection_image_setting = block.settings.collection_image %}
					{% if collection_image_setting %}
						{% assign collection_image = collection_image_setting |  img_url: '567,528', crop: 'center' %}
					{% endif %}
					<div class="collection-block" {{ block.shopify_attributes }}>
						<img src="{{ collection_image }}" alt="{{ block.settings.collection_block.name }}">
						<div class="cb-info">
							<div class="cb-tagline">{{ block.settings.tagline }}</div>
							<a class="cb-btn btn btn-primary" href="/collections/{{ block.settings.collection_block.handle }}">{{ block.settings.button_text }}</a>
						</div>
					</div>
			{% endcase %}
		{% endfor %}
	</div>
</div>

{% schema %}
{
	"name": "Split Collections",
	"tag": "section",
	"class": "section split-collections",
	"settings": [
	],
	"blocks": [
		{
			"type": "collection_block",
			"name": "Collection Block",
			"limit": 2,
			"settings": [
				{
					"type": "collection",
					"id": "collection_block",
					"label": "Collection Block"
				},
				{
					"type": "image_picker",
					"id": "collection_image",
					"label": "Collection Image"
				},
				{
					"type": "text",
					"id": "tagline",
					"label": "Tagline"
				},
				{
					"type": "text",
					"id": "button_text",
					"default": "Shop Products",
					"label": "Button Text"
				}
			]
		}
	],
	"presets": [
		{
			"name": "Split Collections",
			"blocks": [
				{
					"type": "collection_block",
					"settings": {
						"collection_block": "outerwear",
						"tagline": "From Sweaters to Socks, Weâ€™ve got you covered!",
