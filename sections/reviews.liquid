<div class="container">
  <div class="section-title mb-48">
    <{{ section.settings.heading_text_h_tag }} class="h1">
      {{ section.settings.heading_text }}
    </{{ section.settings.heading_text_h_tag }}>
  </div>
</div>

{% schema %}
  {
    "name": "Reviews",
    "tag": "section",
    "class": "section reviews",
    "settings": [
      {
        "type": "select",
        "id": "heading_text_h_tag",
        "default": "h1",
        "label": "Heading Text Tag",
        "options": [
          {
            "value": "h1",
            "label": "h1"
          },
          {
            "value": "h2",
            "label": "h2"
          },
          {
            "value": "h3",
            "label": "h3"
          },
          {
            "value": "h4",
            "label": "h4"
          },
          {
            "value": "h5",
            "label": "h5"
          },
          {
            "value": "h6",
            "label": "h6"
          }
        ]
      },
      {
        "type": "text",
        "id": "heading_text",
        "default": "Best Sellers",
        "label": "Heading Text"
      }
    ],
    "blocks": [
      {
        "type": "review",
        "name": "Review",
        "settings": [
          {
            "type": "richtext",
            "id": "review_content",
            "label": "Review Content"
          },
          {
            "type": "text",
            "id": "review_credit",
            "label": "Review Credit"
          }
        ]
      }
    ],
